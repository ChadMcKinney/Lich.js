nsimplex x = 0.395 * (n0 + n1)
	where
		sqr n = n * n
		i0 = floor x
		i1 = i0 + 1
		x0 = x - i0
		x1 = x0 - 1.0
		t0 = sqr (1.0 - x0*x0)
		n0 = t0 * t0 * (Soliton::simplexGrad1 (Soliton::simplexNoisePerm !! (i0 .& 255)) x0)
		t1 = sqr (1.0 - x1*x1)
		n1 = t1 * t1 * (Soliton::simplexGrad1 (Soliton::simplexNoisePerm !! (i1 .& 255)) x1)

psimplex speed = (\t -> nsimplex $ t * (collapse t speed) * 0.001)
tsimplex speed = (psimplex p) (currentBeat 0)


ptcrush b p = (\t -> collapse (timecrush t) p)
	where 
		timecrush t = if c == 0 then t else (floor (t/q)) * q
			where 
				c = collapse t b
				q = pow 0.5 c

ttcrush b p = (ptcrush b p) (currentBeat 0)

pcrush b p = (\t -> bcrush t (collapse t p))
	where 
		bcrush t o = if c == 0 then o else (floor (o/q)) * q
			where 
				c = collapse t b
				q = pow 0.5 c

tcrush b p = (pcrush b p) (currentBeat 0)

pdust d = (\t -> dd t)
	where 
		dd t = if n > d2 then n * scale - 1 else 0
			where
				d2 = collapse t d
				scale = if d2 > 0 then 2 / d2 else 0
				n = random 0 1

pfir coeffs p = (\t -> lookup 0 $ foldl (\[acc,i] x -> [acc + (x * (collapse (t - i) p)),i+1]) [0,0] coeffs)
tfir coeffs p = (pfir coeffs p) (currentBeat 0)

prange low high p = (\t -> r t (collapse t p))
	where r t i = (i * mulVal) + addVal
		where
			ht = collapse t high
			lt = collapse t low
			mulVal = (ht - lt) * 0.5
			addVal = mulVal + lt

pexprange low high p = (\t -> linexp (collapse t p) -1 1 (collapse t low) (collapse t high))


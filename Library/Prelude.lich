data NoteTypes = Repeat | Rest

-- pattern match a value, if a function then request the value at n, otherwise return the value itself. This allows for nested patterns to return a value at n.
collapse n p = case p of
	(\_ ->) -> p n
	_		-> p

pseq list = (\t -> let wt = wi t in collapse ((t - wt) * lm) $ lookup wt list)
	where
		ll = length list
		lm = 1 / ll
		wi x = wrapRange 0 ll $ floor x

tseq list = (pseq list) (currentBeat 0)

prand list = (\t -> collapse t $ choose list)

pwrand prob list = if (length prob) /= (length list) then error "wchoose prob and list must be the same length"
	else if sum prob /= 1 then error "wchoose prob must sum to 1."
	else (\t -> collapse t $ lookup (index $ random 0 1) list)
		where
			p = lookup 1 $ foldl (\[l,acc] x -> let n = l + x in [n, acc ++ n]) [0,[]] prob
			index = (\r -> lookup 1 $ foldl (\[l,i,j] x -> if (r > l) && (r <= x) then [x,j,j+1] else [x,i,j+1]) [0,0,0] p)

pshuf list = pseq (shuffle list)
tshuf list = (pshuf list) (currentBeat 0)

pfunc func = (\t -> collapse t $ func t)
pwhite low high = (\t -> random (collapse t low) (collapse t high))
pstutter n p = (\t -> collapse (floor $ t / (s t)) p)
	where
		s t = collapse t n

tstutter n p = (pstutter n p) (currentBeat 0)

pwrap low high p = (\t -> wrapRange (collapse t low) (collapse t high) (collapse t p))
twrap low high p = (pwrap low high p) (currentBeat 0)

pseries start step = (\t -> (collpse t start) + (t * (collapse t step)))
tseries start step = (pseries start step) (currentBeat 0)

pgeom start grow = (\t -> (collapse t start) * (pow (collapse t grow) t))
tgeom start grow = (pgeom start grow) (currentBeat 0)

preverse p = (\t -> collapse (neg t) p)
treverse p = collapse (neg $ currentBeat 0) p
pwarp a p = (\t -> collapse (floor $ (s t) * t) p)
	where s t = collapse t a
twarp a p = (pwarp a p) (currentBeat 0)


<h1>{{name}} Module</h1>

{{#if deprecated}}
    <div class="deprecated">
        <p>
        {{#if deprecationMessage}}
            <strong>Deprecated:</strong> {{deprecationMessage}}
        {{else}}
            This module is deprecated.
        {{/if}}
        </p>
    </div>
{{/if}}
<h3>Summary</h3>
<div class="intro">
    {{{moduleDescription}}}
</div>

{{#example}}
    <div class="example">
        <h4>Example:</h4>
        <div class="example-content">
            {{{.}}}
        </div>
    </div>
{{/example}}

<div class="yui3-g">
    <div class="yui3-u-1-2">
        {{#if moduleClasses}}
            <p>This module provides the following functions:</p>

            <ul class="module-classes">
            {{#moduleClasses}}
                <li class="module-class">
                    <a href="{{../projectRoot}}classes/{{name}}.html">
                        {{displayName}}
                    </a>
                </li>
            {{/moduleClasses}}
            </ul>
        {{/if}}
    </div>

    <div class="yui3-u-1-2">
        {{#if subModules}}
            <p>This module is a rollup of the following modules:</p>

            <ul class="module-submodules">
            {{#subModules}}
                <li class="module-submodule">
                    <a href="{{../projectRoot}}modules/{{name}}.html">
                        {{displayName}}
                    </a>

                    <div class="module-submodule-description">
                        {{{description}}}
                    </div>
                </li>
            {{/subModules}}
            </ul>
        {{/if}}
    </div>
</div>
